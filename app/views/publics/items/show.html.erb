<script src="https://kit.fontawesome.com/da6e295665.js" crossorigin="anonymous"></script>
<div class='row'>

  <div class="col-xs-2 col-xs-offset-1">
    <table class='table table-hover table-bordered'>
      <thead>
        <tr>
          <th><i class="fas fa-search"></i>ジャンル検索</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <% if genre.is_active == true %>
          <tr>
            <td>
              <!-- 一旦遷移先をジャンル編集画面に。後程修正 -->
              <%= link_to edit_admins_genre_path(genre), method: :get do %>
                <%= genre.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-xs-3">
    <%= attachment_image_tag(@item, :image, size: "320x240", fallback: "no_image.jpg") %>
  </div>

  <div class="col-xs-4">
    <h3><strong><%= @item.name %></strong></h3>

    <p><%= @item.introduction %></p></br>
    <!-- 後程税込み価格に変更 -->
    <h4>¥ <%= @item.price.to_s(:delimited) %>（税込み）</h4></br>

    <% if @item.is_active == true %>
      <% if @item.genre.is_active == true %>
        <%= form_for(@cart_item, url: cart_items_path, method: :post) do |f| %>
            <%= f.select :amount, options_for_select((1..10).to_a), include_blank: "個数選択" %>
            <%= f.submit "カートに入れる", class: "btn btn-primary pull-right" %>
        <% end %>
      <% else %>
        <p>売り切れ中</p>
      <% end %>
    <% else %>
        <p>売り切れ中</p>
    <% end %>
  </div>
</div>