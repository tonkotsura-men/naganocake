<div class="col-lg-10 space">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 offset-lg-2">
      	<!-- fallbackの画像は現在未設定 -->
        <%= attachment_image_tag(@item :image, :fill, 500, 400, fallback: "#") %>
      </div>
      <div class="col-lg-4">
        <h3>
          <%= @item.name %>
        </h3>
        <h4>商品説明</h4>
        	<%= @item.introduction %>
        <h4>
          <%= ￥item.price.to_s(:delimited) %>
        </h4>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="w-50 offset-lg-6">
    	<% if @item.is_active == true %>
        <% if @item.genre.is_active == true %>
          <%= form_for(@cart_item , url: customers_cart_items_path, method: :post) do |f| %>
            <%= f.hidden_field :item_id, value: @item.id %>
              <%= f.select :amount, options_for_select((1..10).to_a), include_blank: "個数選択" %>
              	<%= f.submit "カートに入れる", class: "glyphicon glyphicon-shopping-cart btn btn-primary" %>
          <% end %>
        <% else %>
            <h3>売り切れ中</h3>
        <% end %>
      <% else %>
        <h3>売り切れ中</h3>
      <% end %>
    </div>
  </div>
</div>

<div id="sidebar" class="col-lg-2">
  <table class='table'>
  	<thead>
    	<tr>
      	<th>ジャンル検索</th>
    	</tr>
  	</thead>
  	<tbody>
    	<% @genres.each do |genre| %>
    		<tr>
      		<td><%= link_to  genre.name, genre_path(genre) %></td>
    		</tr>
    	<% end %>
  	</tbody>
	</table>
</div>

