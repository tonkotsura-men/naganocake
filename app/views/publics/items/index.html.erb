<div class="col-lg-10 space">
  <div class="container">
  <h2>
    <span style="display: inline-block;">商品一覧</span>
    <span style="display: inline-block;">（全<%= @items.count %>件）</span>
  </h2>
</div>
  <div class="container">
    <div class="row">
    <% @items.each do |item| %>
      <%= render 'items/box', item: item %>
    <% end %>
  </div>
  </div>
  <%= paginate @items %>
</div>

<div id="sidebar" class="col-lg-2">
  <table class='table'>
  	<thead>
    	<tr>
      	<th>ジャンル検索</th>
    	</tr>
  	</thead>
  	<tbody>
    	<% @genres.each do |genre| %>
    		<tr>
      		<td><%= link_to  genre.name, genre_path(genre) %></td>
    		</tr>
    	<% end %>
  	</tbody>
	</table>
</div>



















