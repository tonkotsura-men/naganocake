<script src="https://kit.fontawesome.com/da6e295665.js" crossorigin="anonymous"></script>
  <div class="row">
    <div class="col-xs-10">
      <h2>注文情報入力</h2>
    </div>
  </div>

  <% if @cart_items.present? %>
    <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% sum_all = 0 %>
          <% @cart_items.each do |cart| %>
            <tr>
              <td class="text-left">
                <%= attachment_image_tag(cart.item, :image, size: "55x43", fallback: "no_image.jpg") %>
                <%= cart.item.name %>
              </td>
              <td class="text-right">
                ¥<%= tax_price(cart.item.price).to_s(:delimited) %>
              </td>
              <td class="text-right">
                  <%= cart.amount %>
              </td>
              <td class="text-right">
                <!-- ¥ %= sub_price(cart).to_s(:delimited) %> -->
                ¥<%= sum_item = tax_price(cart.item.price).to_i * cart.amount %>
                <% sum_all += sum_item %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-3 billing">
      <table class="table table-hover table-condensed table-bordered">
          <tr>
            <th class="info">送料</th>
            <td class="text-right col-xs-5">¥<%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <th class="info">商品合計</th>
            <td class="text-right">¥<%= sum_all.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="info">請求金額</th>
            <!-- ¥ %= billing(@order).to_s(:delimited) %> -->
            <td class="text-right">
              <% billling_amount = sum_all + @order.shipping_cost %>
              ¥<%= billling_amount.to_s(:delimited) %>
            </td>
          </tr>
      </table>
    </div>
    <div class="col-xs-9 billing">
      <table class="table table-hover table-condensed table-bordered">
        <tr>
          <th  class="info">支払方法</th>
          <td class="text-left">
            <%= @order.payment_method %>
          </td>
        </tr>
        <tr>
          <th  class="info">お届け先</th>
          <td class="text-left">
            <%= "#{@order.postal_code} #{@order.address} 　#{@order.name}" %>
          </td>
        </tr>
      </table>

      <!-- 表示とformを分けて記入 -->
      <div class ="col-xs-11">
      <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :payment_method %>

        <%= link_to "注文情報入力へ戻る", new_order_path, data: {"turbolinks" => false}, class: "btn btn-info col-xs-3 back" %>
        <i class="fas fa-shipping-fast fa-3x pull-right"></i>
        <%= f.submit "購入を確定する", class: "btn btn-warning center-block col-xs-2 pull-right" %>
      <% end %>
      </div>
    <% else %>
        <!-- if カートアイテムがない時 -->
        <p>お客様のショッピングカートに商品はありませんので注文確定ができません。</p>
        <p><%= link_to "商品一覧", items_path %>から商品をお探し下さい。</p>
    <% end %>
  </div>
</div>
