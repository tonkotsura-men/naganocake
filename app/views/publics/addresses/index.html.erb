<div class="col-xs-12">

<h1>配送先登録/一覧</h1>
	<%= form_for(@address) do |f| %>
	<div class="row">
		<div class="form-group col-xs-4">
			<label for="postal_code">郵便番号（ハイフンなし）</label>
			<%= f.text_field :postal_code, class:"form-control", placeholder:"郵便番号" %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-xs-8">
			<label for="address">住所</label>
			<%= f.text_field :address, class:"form-control",　placeholder:"住所" %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-xs-4">
			<label for="name">宛名</label>
			<%= f.text_field :name, class:"form-control",　placeholder:"宛名" %>
		</div>

		<div class="col-xs-offset-8">
	    	<%= f.submit "登録する", class:"btn btn-success" %>
	    </div>
	</div>
    <% end %>



    <table class="table">
			<thead>
				<tr>
					<th>郵便番号</th>
					<th>住所</th>
					<th>宛名</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<% @customer.addresses.each do |address| %>
					<tr>
						<td><%= address.postal_code %></td>
						<td><%= address.address %></td>
						<td><%= address.name %></td>
					<td><%= link_to "編集する",edit_address_path(address), class:"btn btn-primary" %></td>
					<td><%= link_to "削除する",address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger"%></td>
					</tr>
					<% end %>
				</tr>
			</tbody>
		</table>
</div>