<div class="col-xs-12">
	<div class="col-xs-2">
    <table class='table table-hover table-bordered'>
      <thead>
        <tr>
          <th><i class="fas fa-search"></i>ジャンル検索</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <% if genre.is_active == true %>
          <tr>
            <td>
            <%= form_with(url: items_path, method: :get, local: :true) do |f| %>
              <%= f.hidden_field :search, value:genre.id %>
              <%= f.submit genre.name, class: "genre_name_button" %>
            <% end %>
             </td>
          </tr>
          <% end %>
        <% end %>
        <tr>
          <td><%= link_to "⇒ すべての商品を見る", items_path, class: 'dark-blue-letter' %></td>
        </tr>
      </tbody>
    </table>
    <div class="text-center"><%= paginate(@genres) %></div>
  </div>
<div class="col-xs-9 col-xs-offset-1">
	<div class="welcome">
		<div class="wrapper">
				<p class="title">ようこそ、Naganocakeへ！<br>
				このサイトは、ケーキの販売のECサイトになります。<br>
				会員でない方も商品の閲覧はできますが、<br>
				購入には会員登録が必要になります。</p>
		</div>
	</div>
</div>

	<h1>オススメ商品</h1>
	<% @items.each do |item| %>
		<div class="col-xs-3">
			<%= link_to item_path(item.id) do %>
				<%= attachment_image_tag item,:image, size: "180x130", fallback: 'no_image.jpg' %></br>
				<%= item.name %></br>
				 ¥<%= tax_price(item.price).to_s(:delimited) %>
			<% end %>
		</div>
	<% end %>
	<div class="col-xs-12">
		<%= link_to "もっと見る", items_path, class: "btn-link pull-right" %>
	</div>

</div>


