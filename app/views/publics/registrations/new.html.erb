
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-11">
      <h2 class="head-line"><span style="background-color:#C0C0C0">新規会員登録</span></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "publics/shared/error_messages", resource: resource %>
        <div class="field form-group col-sm-12">
          <%= f.label :"名前", class: "col-sm-3 control-label" %>
          <%= f.label :"(姓)", class: "col-sm-1 control-label" %>
          <%= f.text_field :last_name, autofocus: true, class: "col-sm-2" %>
          <%= f.label :"(名)", class: "col-sm-1 control-label" %>
          <%= f.text_field :first_name, autofocus: true, class: "col-sm-2" %>
        </div>

        <div class="field form-group col-sm-12">
          <%= f.label :"フリガナ", class: "col-sm-3 control-label" %>
          <%= f.label :"(セイ)", class: "col-sm-1 control-label" %>
          <%= f.text_field :last_name_kana, autofocus: true, class: "col-sm-2" %>
          <%= f.label :"(メイ)", class: "col-sm-1 control-label" %>
          <%= f.text_field :first_name_kana, autofocus: true, class: "col-sm-2" %>
        </div>
      
        <div class="field form-group col-sm-12">
          <%= f.label :"メールアドレス", class: "col-sm-4 control-label" %>
          <%= f.email_field :email, autofocus: true, class: "col-sm-4" %>
        </div>
        
        <div class="field form-group col-sm-12">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-4 control-label" %>
          <%= f.text_field :postal_code, autofocus: true, class: "col-sm-4"  %>
        </div>
        
        <div class="field form-group col-sm-12">
          <%= f.label :"住所", class: "col-sm-4 control-label" %>
          <%= f.text_field :address, autofocus: true, class: "col-sm-7" %>
        </div>
        
        <div class="field form-group col-sm-12">
          <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-4 control-label" %>
          <%= f.telephone_field :telephone_number, autofocus: true, class: "col-sm-4" %>
        </div>

        <div class="field form-group col-sm-12">
          <%= f.label :"パスワード(6文字以上)", class: "col-sm-4 control-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-4" %>
        </div>

        <div class="field  form-group col-sm-12">
          <%= f.label :"パスワード(確認用)", class: "col-sm-4 control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-4" %>
        </div>

        <div class="actions col-xs-offset-4 col-sm-8 control-label">
          <%= f.submit "新規登録",class: 'btn btn-success btn-lg col-xs-2' %>
        </div>
      <% end %>

      <div class="col-sm-9">
        <%= render "publics/shared/links" %>
      </div>
    </div>
  </div>
</div>
