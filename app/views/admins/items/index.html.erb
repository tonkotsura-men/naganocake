<script src="https://kit.fontawesome.com/da6e295665.js" crossorigin="anonymous"></script>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-2">
      <h2>商品一覧</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= link_to new_admins_item_path, data: {"turbolinks" => false}, class: "btn btn-info btn-circle pull-right" do %>
      <i class="fas fa-plus"></i>
      <% end %>
      <table class="table table-hover table-bordered table-condensed">
        <thead>
          <tr class="info">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
				  <% @items.each do |item| %>
  				  <tr>
              <td class="info col-xs-1">
                <%= item.id %>
              </td>
              <td class="text-left col-xs-2">
                <%= link_to admins_item_path(item), class: "btn-link" do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td class="text-right col-xs-1">
                ¥<%= item.price.to_s(:delimited) %>
              </td>
              <td class="text-left col-xs-1">
                <%= item.genre.name %>
              </td>
              <td class="col-xs-1">
                <% if item.is_active == true %>
      					 <p><i class="fas fa-bullseye"></i>販売中</p>
      				  <% else %>
      					 <p><i class="fas fa-ban"></i>販売停止中</p>
      				  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center"><%= paginate(@items) %></div>
    </div>
  </div>