<script src="https://kit.fontawesome.com/da6e295665.js" crossorigin="anonymous"></script>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-2">
      <h2>商品編集</h2>
    </div>
  </div>

  <div class="row">
    <%= form_for(@item, url: admins_item_path, method: :patch, class: "form-horizontal") do |f| %>
      <div class="col-xs-3 col-xs-offset-2">
        <div class="img_field">
          <%= attachment_image_tag(@item, :image, size: "240x180") %>
        </div>
        <div class="form-group">
          <%= f.attachment_field :image, class: " image" %>
        </div>
      </div>

      <div class="col-xs-5">
        <%= render "form_item", f: f %>
          <div class="actions">
            <%= f.submit "変更を保存", class: "btn btn-success pull-right" %>
          </div>
      </div>
    <% end %>
  </div>
