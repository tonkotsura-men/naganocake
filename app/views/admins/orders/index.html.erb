<div class="row">
  <div class="col-xs-9 col-xs-offset-1">
    <h2 class="head-line"><span style="background-color:#C0C0C0">注文履歴一覧</span></h2>
    <table class="table table-hover table-condensed">
      <thead>
        <tr class="info">
          <th>購入日時</th>
          <th>配送先</th>
          <th>購入個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
       <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="info col-sm-2">
              <%= order.created_at %>
            </td>
            <td class="col-sm-2">
              <%= link_to admins_order_path(order), class: "btn-link"  do %>
                <i class=""></i>
                <%= order.customer.last_name %> 
                <%= order.customer.first_name %>           
              <% end %>
            </td>
            <td class="col-sm-2">
              <%= order.sum_amount %>
            </td>
            <td class="col-sm-2">
              <%= order.status %>            
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
     <div class="text-center"><%= paginate(@orders) %></div>
  </div>
</div>    