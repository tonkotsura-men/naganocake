<div class="container-fluid">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-11">
      <h2 class="head-line"><span style="background-color:#C0C0C0">管理者ログイン</span></h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group col-sm-9" >
          <%= f.label :"メールアドレス", class: "col-sm-4" %>
          <%= f.email_field :email, autofocus: true, class: "col-sm-8 form-control-static" %>
        </div>

        <div class="field col-sm-9">
          <%= f.label :"パスワード", class: "col-sm-4" %>
          <%= f.password_field :password, class: "col-sm-8 form-control-static" %>
        </div>

        <div class="actions col-sm-7 pull-right"><br>
          <%= f.submit "ログイン", class: 'btn btn-primary btn-lg col-xs-3' %>
        </div>
      <% end %>
    </div>
  </div>
</div>


